<UserControl
    x:Class="EdgeEx.WinUI3.Controls.LabIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="using:EdgeEx.WinUI3.Extensions"
    xmlns:local="using:EdgeEx.WinUI3.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border
        Width="25"
        Height="25"
        Padding="4"
        CornerRadius="5"
        PointerEntered="Border_PointerEntered"
        PointerExited="Border_PointerExited"
        Tapped="Border_Tapped">
        <FlyoutBase.AttachedFlyout>
            <Flyout>
                <TextBlock Text="{ex:Locale Key=LabWarnIconToolTip}" />
            </Flyout>
        </FlyoutBase.AttachedFlyout>
        <FontIcon
            FontSize="15"
            Foreground="Orange"
            Glyph="&#xE7BA;"
            ToolTipService.ToolTip="{ex:Locale Key=LabWarnIconToolTip}" />
    </Border>

</UserControl>
