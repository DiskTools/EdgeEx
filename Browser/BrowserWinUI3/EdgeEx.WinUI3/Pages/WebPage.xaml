<Page
    x:Class="EdgeEx.WinUI3.Pages.WebPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:EdgeEx.WinUI3.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <controls:WebView2
            x:Name="TopWebView"
            Grid.Row="0"
            CanGoBack="{x:Bind ViewModel.CanGoBack, Mode=TwoWay}"
            CanGoForward="{x:Bind ViewModel.CanGoForward, Mode=TwoWay}"
            NavigationCompleted="TopWebView_NavigationCompletedAsync"
            NavigationStarting="TopWebView_NavigationStarting"
            Visibility="Collapsed" />
    </Grid>
</Page>
